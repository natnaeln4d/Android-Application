<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddTodo">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

       >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:gravity="center">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:text="add To do"
                android:fontFamily="cursive"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:id="@+id/fullName"
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/baseline_person_outline_24"
                android:ems="10"
                android:focusable="true"
                android:hint="Enter your full name"
                android:padding="10dp"
                android:textColorHighlight="#062E80"
                android:textColorHint="#332932"
                />

            <EditText
                android:id="@+id/work"
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:layout_below="@+id/fullName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/baseline_person_outline_24"
                android:ems="25"
                android:focusable="true"
                android:hint="Enter your work"
                android:padding="10dp"
                android:textColorHighlight="#062E80"
                android:textColorHint="#332932"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:layout_below="@+id/work"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/baseline_fmd_good_24"
                android:ems="10"
                android:focusable="true"
                android:hint="Enter your address"
                android:padding="10dp"
                android:textColorHighlight="#062E80"
                android:textColorHint="#332932"
                />




            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/password"
                android:padding="10dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="23dp">
                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@android:color/white"/>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="|"
                    android:gravity="center"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@android:color/white"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


        </LinearLayout>
    </FrameLayout>

</FrameLayout>